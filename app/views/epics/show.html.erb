<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-2"><%= @epic.title %></h1>
      <div class="flex items-center gap-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
          case @epic.status
          when 'pending' then 'bg-gray-100 text-gray-800'
          when 'generating_spec' then 'bg-yellow-100 text-yellow-800'
          when 'running' then 'bg-blue-100 text-blue-800'
          when 'paused' then 'bg-orange-100 text-orange-800'
          when 'completed' then 'bg-green-100 text-green-800'
          when 'failed' then 'bg-red-100 text-red-800'
          end
        %>">
          <%= @epic.status.humanize %>
        </span>
        <span class="text-sm text-gray-500">Repository: <%= @epic.repository.name %></span>
        <span class="text-sm text-gray-500">Base branch: <%= @epic.base_branch || 'main' %></span>
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="text-xl font-semibold mb-4">Tasks (<%= @epic.tasks.count %>)</h2>
      
      <% @epic.tasks.ordered.each do |task| %>
        <div class="bg-white shadow rounded-lg p-4 border border-gray-200">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <span class="text-sm font-medium text-gray-500">#<%= task.position %></span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                  case task.status
                  when 'pending' then 'bg-gray-100 text-gray-800'
                  when 'running' then 'bg-blue-100 text-blue-800'
                  when 'pr_open' then 'bg-purple-100 text-purple-800'
                  when 'merging' then 'bg-yellow-100 text-yellow-800'
                  when 'completed' then 'bg-green-100 text-green-800'
                  when 'failed' then 'bg-red-100 text-red-800'
                  end
                %>">
                  <%= task.status.humanize %>
                </span>
              </div>
              
              <p class="text-gray-900"><%= task.description %></p>
              
              <% if task.pr_url.present? %>
                <div class="mt-2">
                  <%= link_to "View Pull Request →", task.pr_url, target: "_blank", class: "text-sm text-indigo-600 hover:text-indigo-800" %>
                </div>
              <% end %>
              
              <% if task.branch_name.present? %>
                <p class="mt-1 text-xs text-gray-500">Branch: <%= task.branch_name %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex gap-4">
      <%= link_to "← Back to New Epic", new_epic_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= button_tag "Refresh", onclick: "location.reload()", class: "inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
</div>
