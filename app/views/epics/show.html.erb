<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-2"><%= @epic.title %></h1>
      <div class="flex items-center gap-4 text-sm text-gray-600">
        <span><strong>Repository:</strong> <%= @epic.repository.name %></span>
        <span><strong>Base Branch:</strong> <%= @epic.base_branch %></span>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= status_color(@epic.status) %>-100 text-<%= status_color(@epic.status) %>-800">
          <%= @epic.status.humanize %>
        </span>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Tasks (<%= @epic.tasks.count %>)</h2>
      
      <% if @epic.tasks.any? %>
        <div class="space-y-3">
          <% @epic.tasks.each do |task| %>
            <div class="border rounded-lg p-4" id="task_<%= task.id %>">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="text-sm font-medium text-gray-500">#<%= task.position + 1 %></span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= status_color(task.status) %>-100 text-<%= status_color(task.status) %>-800">
                      <%= task.status.humanize %>
                    </span>
                  </div>
                  <p class="text-gray-900"><%= task.description %></p>
                  
                  <% if task.pull_request_url.present? %>
                    <div class="mt-2">
                      <%= link_to "View Pull Request â†’", task.pull_request_url, target: "_blank", class: "text-sm text-indigo-600 hover:text-indigo-800" %>
                    </div>
                  <% end %>
                  
                  <% if task.branch_name.present? %>
                    <div class="mt-1 text-sm text-gray-500">
                      Branch: <code class="bg-gray-100 px-1 py-0.5 rounded"><%= task.branch_name %></code>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No tasks yet.</p>
      <% end %>
    </div>

    <div class="mt-6 flex gap-4">
      <% if @epic.pending? %>
        <%= button_to "Start Epic", "#", method: :post, class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2", disabled: true, title: "Functionality will be available in Task 6.4" %>
      <% end %>
      <%= link_to "Refresh", epic_path(@epic), class: "inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= link_to "Create Another Epic", new_epic_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
</div>
