<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Create New Epic</h1>
    
    <%= form_with(model: @epic, local: true, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :repository_id, "Repository", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.collection_select :repository_id, @repositories, :id, :name, 
            { prompt: "Select a repository" }, 
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
      </div>

      <div>
        <%= form.label :base_branch, "Base Branch", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :base_branch, value: "main", 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-sm text-gray-500">The branch to base tasks on (default: main)</p>
      </div>

      <div>
        <%= form.label :tasks, "Tasks", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :tasks, rows: 10, 
            placeholder: "Task 1: Add user authentication\nTask 2: Create dashboard\nTask 3: Deploy to production",
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm font-mono" %>
        <p class="mt-1 text-sm text-gray-500">Enter one task per line. Format: "Task N: Description"</p>
      </div>

      <div class="flex gap-4">
        <%= form.submit "Create Epic", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        <%= link_to "Cancel", root_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
