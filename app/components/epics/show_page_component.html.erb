<div class="min-h-screen bg-gray-50">
  <!-- Header with Epic Info -->
  <header class="bg-white shadow-sm border-b border-gray-200" <%= test_id("epic-show-header").to_h %>>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-3xl font-bold text-gray-900" data-test="epic-title">
              <%= @epic.title || "Epic ##{@epic.id}" %>
            </h1>
            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-semibold border <%= status_badge_class(@epic.status) %>" data-test="epic-status">
              <span><%= status_icon(@epic.status) %></span>
              <%= @epic.status.humanize %>
            </span>
          </div>
          
          <div class="flex flex-wrap items-center gap-4 text-sm">
            <div class="flex items-center gap-1.5 text-gray-600">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
              </svg>
              <span class="font-medium">Repository:</span>
              <span data-test="epic-repository"><%= @epic.repository.name %></span>
            </div>
            
            <div class="flex items-center gap-1.5 text-gray-600">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <span class="font-medium">Base branch:</span>
              <code class="px-2 py-0.5 bg-gray-100 rounded text-xs font-mono" data-test="epic-base-branch">
                <%= @epic.base_branch || 'main' %>
              </code>
            </div>
            
            <div class="flex items-center gap-1.5 text-gray-600">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <span class="font-medium">Tasks:</span>
              <span data-test="epic-task-count"><%= @epic.tasks.count %></span>
            </div>
          </div>
        </div>
        
        <div class="ml-4">
          <button onclick="location.reload()" 
                  class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150"
                  data-test="refresh-button">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Refresh
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Progress Summary -->
    <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Progress Overview</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4">
        <% task_counts = @epic.tasks.group(:status).count %>
        <% ['pending', 'running', 'pr_open', 'merging', 'completed', 'failed'].each do |status| %>
          <div class="text-center p-3 rounded-lg border <%= task_status_badge_class(status) %>" data-test="status-count-<%= status %>">
            <div class="text-2xl font-bold"><%= task_counts[status] || 0 %></div>
            <div class="text-xs font-medium mt-1"><%= status.humanize %></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Tasks List -->
    <div class="space-y-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">
          Tasks (<%= @epic.tasks.count %>)
        </h2>
      </div>

      <% if @epic.tasks.any? %>
        <div class="space-y-3" data-test="tasks-list">
          <% @epic.tasks.ordered.each do |task| %>
            <div class="bg-white shadow-sm rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200" 
                 data-test="task-card-<%= task.id %>">
              <div class="p-5">
                <div class="flex items-start justify-between gap-4">
                  <!-- Task Content -->
                  <div class="flex-1 min-w-0">
                    <!-- Task Header -->
                    <div class="flex items-center gap-3 mb-3">
                      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-sm font-bold text-gray-700" 
                            data-test="task-position">
                        #<%= task.position %>
                      </span>
                      <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold border <%= task_status_badge_class(task.status) %>" 
                            data-test="task-status">
                        <%= task.status.humanize %>
                      </span>
                    </div>

                    <!-- Task Description -->
                    <p class="text-base text-gray-900 mb-3 leading-relaxed" data-test="task-description">
                      <%= task.description %>
                    </p>

                    <!-- Task Metadata -->
                    <div class="flex flex-wrap items-center gap-4 text-sm">
                      <% if task.branch_name.present? %>
                        <div class="flex items-center gap-1.5 text-gray-600">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                          </svg>
                          <code class="px-2 py-0.5 bg-gray-100 rounded text-xs font-mono" data-test="task-branch">
                            <%= task.branch_name %>
                          </code>
                        </div>
                      <% end %>

                      <% if task.pr_url.present? %>
                        <a href="<%= task.pr_url %>" 
                           target="_blank"
                           class="inline-flex items-center gap-1.5 text-indigo-600 hover:text-indigo-800 font-medium transition-colors"
                           data-test="task-pr-link">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                          </svg>
                          View Pull Request
                        </a>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No tasks yet</h3>
          <p class="mt-1 text-sm text-gray-500">Tasks will appear here once they are created.</p>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="mt-8 flex gap-4">
      <%= link_to new_epic_path, 
          class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-150",
          data: { test: "new-epic-button" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Create New Epic
      <% end %>
    </div>
  </main>
</div>
